<?xml version="1.0" encoding="utf-8"?>
	<openerp>
		<data>

			<record model="ir.ui.view" id="task_status_tree">
				<field name="name">tasks.status.tree</field>
				<field name="model">tasks.status</field>
				<field name="type">tree</field>
				<field name="arch" type="xml">
					<tree string="ATM Surveys tree" colors="red:status=='cancel';blue:status=='done'">
						<field name="status_id" />
						<field name="task_month" />
						<field name="customer"/>
						<field name="atm"/>
						<field name="country"/>
						<field name="state" />
						<field name="surveyor"/>
						<field name="visit_time"/>
						<field name="additional_info"/>
						<field name="status"/>
					</tree>
				</field>
			</record>
	
			<record model="ir.ui.view" id="task_status_form">
				<field name="name">tasks.status.form</field>
				<field name="model">tasks.status</field>
				<field name="type">form</field>
				<field name="arch" type="xml">
					<form string="ATM Surverys form">
					<header>
						<button name="status_done" type="object" String="Done" class="oe_highlight" />
						<button name="status_cancel" type="object" String="Cancel" />
						<field name="status" widget="statusbar" statusbar_visible="assigned,pending,cancel,progress,waitnig_approve,done"/> 

					</header>
					<sheet>
						<group>
							<group>
								<field name="status_id" readonly="1"/>
								<field name="task_month"/>
								<field name="customer" required="1"/>
								<field name="state" required="1"/>
								<field name="atm" />
								<field name='visit_shift' required="1"/>
								<field name="country" required="1"/>
								<field name="surveyor" required="1"/>
								<field name="visit_time" required="1"/>
								<field name="additional_info" />
								<field name="bulk_insert" />
								<field name="visit_type" />
							</group>
							<group string="Visit Details" >
								<field name="remarks_id" />
								<field name="remarks" />
								<field name="act_visit_time" />
							</group>
						</group>
					</sheet>
				</form>
				</field>
			</record>

			<record model='ir.actions.act_window' id='task_status_action'>
				<field name="name">Tasks Completed/Cancelled</field>
				<field name='res_model'>tasks.status</field>
				<field name="view_mode">tree,form</field>
			</record>
			 

			<menuitem name="Tasks Completed/Cancelled" parent='atm_dashboard' id='tasks_status_id' sequence="3" action='task_status_action' />
		</data>
	</openerp>
		
